<?xml version="1.0"?>
<openerp>
    <data>
        <record id="fnx_sr_view_partners_form" model="ir.ui.view">
                <field name="name">fnx.sr.view.res.partner.form</field>
                <field name="model">res.partner</field>
                <field name="inherit_id" ref="base.view_partner_form"/>
                <field eval="18" name="priority"/>
                <field name="arch" type="xml">
                    <page name="page_history" position="before">
                        <page string="Shipments">
                            <field name="shipped" nolabel="1" attrs="{'invisible': [('is_carrier','=',True)]}">
                                <tree>
                                    <field name="name"/>
                                    <field name="appointment"/>
                                    <field name="partner_source_document"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                            <field name="carried" nolabel="1" attrs="{'invisible': [('is_carrier','=',False)]}">
                                <tree>
                                    <field name="name"/>
                                    <field name="appointment"/>
                                    <field name="partner_source_document"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </page>
                </field>
        </record>
    </data>
</openerp>
