<?xml version="1.0"?>
<openerp>
    <data>
        <record model="workflow" id="wkf_fnx_sr">
            <field name="name">fnx.sr.wkf</field>
            <field name="osv">fnx.sr.shipping</field>
            <field name="on_create">True</field>
        </record>

        <record model="workflow.activity" id="act_draft">
            <field name="wkf_id" ref="wkf_fnx_sr" />
            <field name="flow_start">True</field>
            <field name="name">draft</field>
            <field name="kind">function</field>
            <field name="action">sr_draft()</field>
        </record>

        <record model="workflow.activity" id="act_schedule">
            <field name="wkf_id" ref="wkf_fnx_sr" />
            <field name="name">schedule</field>
            <field name="kind">function</field>
            <field name="action">sr_schedule()</field>
        </record>

        <record model="workflow.activity" id="act_appt">
            <field name="wkf_id" ref="wkf_fnx_sr" />
            <field name="name">appointment</field>
            <field name="kind">function</field>
            <field name="action">sr_appointment()</field>
        </record>

        <record model="workflow.activity" id="act_ready">
            <field name="wkf_id" ref="wkf_fnx_sr" />
            <field name="name">ready</field>
            <field name="kind">function</field>
            <field name="action">sr_ready()</field>
        </record>

        <record model="workflow.activity" id="act_complete">
            <field name="wkf_id" ref="wkf_fnx_sr" />
            <field name="name">complete</field>
            <field name="kind">function</field>
            <field name="action">sr_complete()</field>
            <field name="flow_stop">True</field>
        </record>

        <record model="workflow.activity" id="act_cancel">
            <field name="wkf_id" ref="wkf_fnx_sr" />
            <field name="name">cancel</field>
            <field name="kind">function</field>
            <field name="action">sr_cancel()</field>
            <field name="flow_stop">True</field>
        </record>

        <record model="workflow.transition" id="t1">
            <field name="act_from" ref="act_draft" />
            <field name="act_to" ref="act_schedule" />
            <field name="signal">sr_schedule</field>
        </record>

        <record model="workflow.transition" id="t2">
            <field name="act_from" ref="act_schedule" />
            <field name="act_to" ref="act_ready" />
            <field name="signal">sr_ready</field>
        </record>

        <record model="workflow.transition" id="d1">
            <field name="act_from" ref="act_draft" />
            <field name="act_to" ref="act_complete" />
            <field name="signal">sr_complete</field>
        </record>

        <record model="workflow.transition" id="d2">
            <field name="act_from" ref="act_schedule" />
            <field name="act_to" ref="act_complete" />
            <field name="signal">sr_complete</field>
        </record>

        <record model="workflow.transition" id="d3">
            <field name="act_from" ref="act_appt" />
            <field name="act_to" ref="act_complete" />
            <field name="signal">sr_complete</field>
        </record>

        <record model="workflow.transition" id="d4">
            <field name="act_from" ref="act_ready" />
            <field name="act_to" ref="act_complete" />
            <field name="signal">sr_complete</field>
        </record>

        <record model="workflow.transition" id="c1">
            <field name="act_from" ref="act_draft" />
            <field name="act_to" ref="act_cancel" />
            <field name="signal">sr_cancel</field>
        </record>

        <record model="workflow.transition" id="c2">
            <field name="act_from" ref="act_schedule" />
            <field name="act_to" ref="act_cancel" />
            <field name="signal">sr_cancel</field>
        </record>

        <record model="workflow.transition" id="c3">
            <field name="act_from" ref="act_appt" />
            <field name="act_to" ref="act_cancel" />
            <field name="signal">sr_cancel</field>
        </record>

        <record model="workflow.transition" id="c4">
            <field name="act_from" ref="act_ready" />
            <field name="act_to" ref="act_cancel" />
            <field name="signal">sr_cancel</field>
        </record>

    </data>
</openerp>

